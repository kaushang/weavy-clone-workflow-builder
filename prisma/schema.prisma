// User workflows
model Workflow {
  id        String   @id @default(cuid())
  name      String
  userId    String
  nodes     Json
  edges     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  runs      WorkflowRun[]

  @@index([userId])
}

// Workflow execution history
model WorkflowRun {
  id          String   @id @default(cuid())
  workflowId  String
  workflow    Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  userId      String
  status      String
  scope       String
  duration    Int?
  nodeResults Json
  createdAt   DateTime @default(now())

  @@index([workflowId])
  @@index([userId])
  @@index([createdAt])
}